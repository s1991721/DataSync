<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jef.datasync.mapper.DepartmentMapper">

    <update id="createTemplateTable">
        CREATE TABLE t_base_department_temp LIKE t_base_department;
    </update>

    <insert id="copyDataToTemplateTable">
        INSERT INTO t_base_department_temp
        SELECT *
        FROM t_base_department;
    </insert>

    <update id="deleteAllData">
        update t_base_department_temp
        set deleted =1
    </update>

</mapper>